
/* 

Enter number of rows:
5
 111111111
  2222222
   33333
    444
     5


*/


#include<stdio.h>
int main()
{
    int i,j,k,rows,count,temp;
    printf("Enter number of rows:\n");
    scanf("%d",&rows);
    count=1;
    // using formula a+(n-1)*d
    temp=1+(rows-1)*2;
    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=count;j++)
        {
            printf(" ");
        }
        for(k=temp;k>=1;k--)
        {
            printf("%d",i);
        }
        count++;
        temp-=2;

        printf("\n");
    }
}
