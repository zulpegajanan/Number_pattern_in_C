#include<stdio.h>
int main()
{
    int i,j,k,rows,count,temp;
    printf("Enter number of rows:\n");
    scanf("%d",&rows);

    for(i=1;i<=rows;i++)
    {
        for(j=1;j<=i;j++)
        {
            printf("%d ",i);

        }
        printf("\n");
    }
 for(i=rows-1;i>=1;i--)
 {
  for(j=i;j>=1;j--)
  {
   printf("%d ",i);
  }
  printf("\n");
 }
}
