/*
Enter number of rows:

5

   



    1
   22
  333
 4444
55555
 4444
  333
   22
    1

   

    



*/


#include<stdio.h>
main()
{
    int i,j,k,rows,count,temp;
    printf("Enter number of rows:\n");
    scanf("%d",&rows);
    printf("\n");
    count=rows-1;

    for(i=1;i<=rows;i++)
    {
     for(k=1;k<=count;k++)
     {
      printf(" ");
     }
        for(j=1;j<=i;j++)
        {
            printf("%d",i);

        }
        count--;
        printf("\n");
    }
   count=1;
      for(i=rows-1;i>=1;i--)
    {
     for(k=1;k<=count;k++)
        {
      printf(" ");
     }
        for(j=1;j<=i;j++)
        {
            printf("%d",i);
        }
        count++;

        printf("\n");
    }
}
